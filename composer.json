{
    "name": "dmk/mkpostman",
    "version": "9.1.2",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3 CMS",
        "newsletter",
        "postman"
    ],
    "homepage": "http://www.dmk-ebusiness.de/",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Michael Wagner",
            "email": "michael.wagner@dmk-ebusiness.de",
            "role": "Developer"
        }
    ],
    "require": {
        "typo3/cms-core": "^7.6 || ^8.7 || ^9.5",
        "digedag/rn-base": ">=1.10",
        "dmk/mkmailer": "~3.0 || >=9.0"
    },
    "require-dev": {
        "dmk/mkforms": "~3.0 || >=9.5",
        "dmk/mklib": "~3.0 || >=9.5",
        "namelesscoder/typo3-repository-client": "^1.2",
        "nimut/testing-framework": "^1.1 || ^2.0 || ^4.0",
        "friendsofphp/php-cs-fixer": "2.14.*",
        "mikey179/vfsstream": "^1.4",
        "phpunit/phpunit": "^4.7 || ^7.0"
    },
    "suggest": {
        "dmk/mkforms": "Use the powerful MK Forms extension to build the subscription form ('\"dmk/mkforms\": \">=9\"').",
        "dmk/mklib": "install the mklib extension, when you need export functionality."
    },
    "support": {
        "email": "dev@dmk-ebusiness.de",
        "source": "https://github.com/DMKEBUSINESSGMBH/typo3-mkpostman",
        "issues": "https://github.com/DMKEBUSINESSGMBH/typo3-mkpostman"
    },
    "replace": {
        "typo3-ter/mkpostman": "self.version"
    },
    "autoload": {
        "psr-4": {
            "DMK\\Mkpostman\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DMK\\Mkpostman\\Tests\\" : "Tests/Unit/PHP",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
            "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
        }
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "preferred-install": {
            "typo3/cms": "source"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/mkpostman ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/mkpostman"
        ],
        "test": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_WEB=.Build/Web .Build/bin/phpunit --colors -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit"
        ],
        "cs-fix": [
            "[ -e .Build/bin/php-cs-fixer ] || composer update",
            ".Build/bin/php-cs-fixer fix "
        ],
        "analyse": [
            "[ -e .Build/bin/php-cs-fixer ] || composer update",
            ".Build/bin/php-cs-fixer fix -v --dry-run --diff"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "extension-key": "mkpostman",
            "web-dir": ".Build/Web"
        }
    }
}
